
﻿@{
    ViewBag.Title = "Create";
}
<br />
<br />
<h2>Create Your Own Custom Build</h2>
<br />
<div class="container">
    <form action="~/Builds/Edit" method="post">
        <div class="form-group">
            <label>Name</label><input type="text" id="buildName" name="buildName" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />
        </div>
        <div class="form-group">
            @*<div class="custom-select" style="width:200px;">*@
                <label>Motherboard</label>
                @*<input type="text" id="motherboard" name="motherboard" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />*@

                @*<select asp-for="Motherboard" asp-items="ViewBag.CreatedList"></select>*@   @*Get from db?*@
                
                <select name="motherboard" id="Motherboard">
                @foreach (var motherboard in ViewBag.Motherboards)
                {
                    <option value="@motherboard["title"]">@motherboard["title"]</option>
                }
                    <optgroup label="more" onchange="location = this.value">
                        <option value="http://localhost:53796/Builds/MoreParts">More...</option>
                    </optgroup>
             </select>
            @*</div>*@
        </div>

        <div class="form-group">
            <label>GPU</label>
            @*<input type="text" id="gpu" name="gpu" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />*@
            <select name="gpu" id="GPU">
                @foreach (var gpu in ViewBag.GPUs)
                {
                    <option value="@gpu["title"]">@gpu["title"]</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>CPU</label>
            @*<input type="text" id="cpu" name="cpu" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />*@
            <select name="cpu" id="CPU">
                @foreach (var cpu in ViewBag.CPUs)
                {
                    <option value="@cpu["title"]">@cpu["title"]</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>PSU</label>
            @*<input type="text" id="psu" name="psu" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />*@
            <select name="psu" id="PSU">
                @foreach (var psu in ViewBag.PSUs)
                {
                    <option value="@psu["title"]">@psu["title"]</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Case</label>
            @*<input type="text" id="case" name="casename" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />*@
            <select name="casename" id="Case">
                @foreach (var pccase in ViewBag.Cases)
                {
                    <option value="@pccase["title"]">@pccase["title"]</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>RAM</label>
            @*<input type="text" id="ram" name="ram" class="form-control" placeholder="Enter build name" pattern="[a-zA-Z0-9-]+" />*@
            <select name ="ram" id="RAM">
                @foreach (var ram in ViewBag.RAMs)
                {
                    <option value="@ram["title"]">@ram["title"]</option>
                }
            </select>
        </div>
        <div class="form-group">
            @*remember me radio box with BIT, 1 for click save*@
            <input type="submit" id="create" class="form-control" value="Build" />
        </div>
    </form>
</div>


